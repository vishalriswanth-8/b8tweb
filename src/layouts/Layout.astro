---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCartButton from '../components/FloatingCartButton.astro';
import LoadingScreen from '../components/LoadingScreen.astro';
import ScrollIndicator from '../components/ScrollIndicator.astro';
import CartUtils from '../components/CartUtils.astro';
import CartQuantityPopup from '../components/CartQuantityPopup.astro';
import '../styles/transitions.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Research Lab and PCB Order Website" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-[#EDE8F5]">
    <CartUtils />
    <LoadingScreen />
    <Header />
    <main class="flex-grow page-transition">
      <slot />
    </main>
    <ScrollIndicator />
    <Footer />
    <FloatingCartButton currentPath={currentPath} />
    <CartQuantityPopup />
  </body>
</html>