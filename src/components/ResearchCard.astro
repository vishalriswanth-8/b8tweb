---
interface Props {
  title: string;
  authors: string[];
  abstract: string;
  publishDate: string;
  link: string;
}

const { title, authors, abstract, publishDate, link } = Astro.props;
---
<div class="bg-white rounded-lg shadow-md p-6">
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 text-sm mb-2">By {authors.join(', ')}</p>
  <p class="text-gray-600 text-sm mb-4">Published: {publishDate}</p>
  <p class="text-gray-700 mb-4">{abstract}</p>
  <a href={link} class="text-blue-600 hover:text-blue-800 font-medium">Read Full Paper â†’</a>
</div>