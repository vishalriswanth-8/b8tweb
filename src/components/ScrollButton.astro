<button
  id="scroll-button"
  class="fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-pink-500 text-white rounded-full p-3 shadow-lg hover:bg-pink-600 transition-all duration-300 z-50 animate-bounce"
  aria-label="Scroll to content"
>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
  </svg>
</button>

<script>
  const scrollButton = document.getElementById('scroll-button');
  
  if (scrollButton) {
    scrollButton.addEventListener('click', () => {
      const mainContent = document.querySelector('main');
      if (mainContent) {
        mainContent.scrollIntoView({ behavior: 'smooth' });
      }
    });

    // Hide button when scrolled down
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        scrollButton.classList.add('opacity-0', 'pointer-events-none');
      } else {
        scrollButton.classList.remove('opacity-0', 'pointer-events-none');
      }
    });
  }
</script>