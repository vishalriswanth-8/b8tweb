---
import Layout from '../layouts/Layout.astro';
import ResearchCard from '../components/ResearchCard.astro';

const researchPapers = [
  {
    title: "Advanced PCB Design Techniques for EMI Reduction in High-Speed Circuits",
    authors: ["Dr. Sarah Johnson", "Prof. Michael Chen"],
    abstract: "This paper presents novel PCB design techniques that significantly reduce electromagnetic interference in high-speed digital circuits. Our research demonstrates a 40% reduction in EMI through innovative layer stackup and routing methodologies.",
    publishDate: "2024-01-15",
    link: "/papers/emi-reduction"
  },
  {
    title: "Thermal Management Solutions for High-Density PCB Designs",
    authors: ["Dr. Robert Smith", "Dr. Emily Wong"],
    abstract: "A comprehensive study of thermal management techniques for modern high-density PCB designs. We introduce new approaches to heat dissipation and component placement that improve overall thermal performance.",
    publishDate: "2023-12-10",
    link: "/papers/thermal-management"
  },
  {
    title: "AI-Driven PCB Component Placement Optimization",
    authors: ["Prof. David Brown", "Dr. Lisa Zhang"],
    abstract: "This research introduces a machine learning approach to optimize component placement in PCB designs, resulting in improved signal integrity and reduced manufacturing costs.",
    publishDate: "2023-11-28",
    link: "/papers/ai-optimization"
  }
];
---

<Layout title="Research - TechLab">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold mb-8">Research Publications</h1>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Latest Publications</h2>
      <div class="space-y-6">
        {researchPapers.map(paper => (
          <ResearchCard {...paper} />
        ))}
      </div>
    </div>

    <div class="bg-blue-50 p-8 rounded-lg">
      <h2 class="text-2xl font-semibold mb-6">Research Areas</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">Signal Integrity</h3>
          <p class="text-gray-600">Advanced research in high-speed signal integrity and EMI reduction techniques.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">Thermal Management</h3>
          <p class="text-gray-600">Innovative solutions for thermal challenges in modern PCB designs.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">AI & Automation</h3>
          <p class="text-gray-600">Applying machine learning to optimize PCB design and manufacturing processes.</p>
        </div>
      </div>
    </div>
  </div>
</Layout>