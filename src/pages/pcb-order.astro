---
import Layout from '../layouts/Layout.astro';
import PCBOrderForm from '../components/PCBOrderForm.astro';
import ServiceFeature from '../components/ServiceFeature.astro';
import PCBCalculator from '../components/PCBCalculator.astro';
---

<Layout title="PCB Order - TechLab">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold mb-8">Custom PCB Order</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="space-y-8">
        <!-- WhatsApp Order Option -->
       <div class="bg-green-50 bg-opacity-70 p-6 rounded-lg">


          <h2 class="text-xl font-semibold text-green-800 mb-4">Quick Order via WhatsApp</h2>
          <p class="text-green-700 mb-4">Get instant support and quick order processing through WhatsApp!</p>
          <a 
            href="https://wa.me/1234567890" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700"
          >
            Order via WhatsApp
          </a>
        </div>

        <!-- Web Order Form -->
       
        <div class="bg-white bg-opacity-70 p-6 rounded-lg shadow-md">
          <h2 class="text-xl font-semibold mb-6">Order Form</h2>
          <PCBOrderForm />
        </div>
      </div>

      <div class="space-y-8">
        <!-- Price Calculator -->
        <PCBCalculator />
        
        <!-- Features -->
        <div class="bg-blue-50  bg-opacity-90 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-4">Why Choose Our PCB Services?</h2>
          <ul class="space-y-3 text-blue-800">
            <li class="flex items-start">
              <span class="mr-2">✓</span>
              <span>Free PCB designing for your requirements</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">✓</span>
              <span>Experienced design team</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">✓</span>
              <span>Lowest price among others</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">✓</span>
              <span>No hidden fee</span>
            </li><li class="flex items-start">
              <span class="mr-2">✓</span>
              <span>After sales service and Free replacement </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>
