---
import Layout from '../layouts/Layout.astro';
import FeedbackForm from '../components/FeedbackForm.astro';
---

<Layout title="Contact Us - TechLab">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold mb-8">Contact Us</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-xl font-semibold mb-4">Get in Touch</h2>
          <div class="space-y-4">
            <a href="https://g.co/kgs/rM63D3x" target="_blank" class="contact-link">
              <span class="text-2xl mr-4">📍</span>
              <div>
                <h3 class="font-semibold">Address</h3>
                <p class="text-gray-600">KRT Complexe, Main Road, Puduppai,<br> Vellakoil, Tamil Nadu 638111</p>
              </div>
            </a>
            
            <a href="tel:+919786414880" class="contact-link">
              <span class="text-2xl mr-4">📞</span>
              <div>
                <h3 class="font-semibold">Phone</h3>
                <p class="text-gray-600">+91 9786414880</p>
              </div>
            </a>
            
            <a href="mailto:b8tlabs.com" class="contact-link">
              <span class="text-2xl mr-4">✉️</span>
              <div>
                <h3 class="font-semibold">Email</h3>
                <p class="text-gray-600">b8tlabs.com</p>
              </div>
            </a>
          </div>
        </div>
      </div>

      <!-- Feedback Form -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold mb-6">Send Us Feedback</h2>
        <FeedbackForm />
      </div>
    </div>
  </div>
</Layout>

<style>
  .contact-link {
    @apply flex items-start hover:text-blue-600 transition-colors duration-200;
  }
</style>